<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#898989"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titel"
        android:layout_width="364dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="651dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="calculator"
        android:textColor="#000000"
        android:textSize="57sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="411dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="second number 🕸️"
        android:textColor="#010204"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="277dp"
        android:backgroundTint="#786C62"
        android:fontFamily="monospace"
        android:text="calculate"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="205dp"
        android:layout_marginBottom="170dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Total "
        android:textColor="#000000"
        android:textSize="70sp" />

    <ImageView
        android:id="@+id/spider"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-11dp"
        android:layout_marginTop="-48dp"
        android:layout_marginEnd="302dp"
        android:layout_marginBottom="609dp"
        android:rotation="144"
        app:srcCompat="@drawable/spider__1_" />

    <ImageView
        android:id="@+id/spider2"
        android:layout_width="269dp"
        android:layout_height="317dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-55dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="-87dp"
        android:rotation="-144"
        app:srcCompat="@drawable/cobweb_42777" />

    <ImageView
        android:id="@+id/face1"
        android:layout_width="77dp"
        android:layout_height="89dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="475dp"
        app:srcCompat="@drawable/anatomy" />

    <ImageView
        android:id="@+id/face2"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="328dp"
        android:layout_marginBottom="394dp"
        app:srcCompat="@drawable/anatomy" />

    <EditText
        android:id="@+id/first"
        android:layout_width="226dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="494dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textPersonName"
        android:text="first number 🕸️"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>